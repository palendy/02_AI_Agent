# Multi-Agent Chatbot Environment Variables

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
DEFAULT_MODEL_NAME=gpt-4o-mini
EMBEDDING_MODEL=text-embedding-3-large

# GitHub Configuration
GITHUB_TOKEN=your_github_token_here
GITHUB_REPOSITORIES=https://github.com/owner/repo1,https://github.com/owner/repo2

# MCP Server Configuration
MCP_SERVER_URL=localhost:8000
MCP_SERVER_TIMEOUT=30

# Agent Configuration
CHAT_AGENT_MODEL=gpt-4o-mini
RAG_AGENT_MODEL=gpt-4o-mini
ISSUE_AGENT_MODEL=gpt-4o-mini

# RAG Configuration
RELEVANCE_THRESHOLD=0.5
MAX_SEARCH_RESULTS=10
CHUNK_SIZE=1500
CHUNK_OVERLAP=300

# Database Configuration
DATABASE_URL=sqlite:///multi_agent_chatbot.db

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=multi_agent_chatbot.log

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=False

# Conversation Configuration
MAX_CONVERSATION_HISTORY=50
CONVERSATION_TIMEOUT=3600
