    "requirement_templates": {
      "functional": {
        "id_prefix": "FR",
        "format": "[ID] The system shall [action] [object] [condition] [performance_criteria]",
        "attributes": [
          "priority",
          "verification_method",
          "source",
          "rationale",
          "dependencies"
        ]
      },
      "non_functional": {
        "id_prefix": "NFR",
        "format": "[ID] The system shall [performance_metric] [target_value] [measurement_condition]",
        "attributes": [
          "priority",
          "measurement_method",
          "acceptance_criteria",
          "rationale"
        ]
      },
      "interface": {
        "id_prefix": "IR",
        "format": "[ID] The [interface_type] interface shall [specification] [protocol] [performance]",
        "attributes": [
          "interface_type",
          "protocol_standard",
          "electrical_specs",
          "timing_requirements"
        ]
      },
      "safety": {
        "id_prefix": "SR",
        "format": "[ID] The system shall [safety_function] to [safety_goal] with [integrity_level]",
        "attributes": [
          "sil_level",
          "hazard_reference",
          "safety_mechanism",
          "diagnostic_coverage"
        ]
      }
    },
    "quality_criteria": {
      "completeness": {
        "min_requirements_per_section": 3,
        "required_attributes": ["priority", "verification_method", "rationale"],
        "coverage_requirements": ["functional", "non_functional", "interface", "safety"]
      },
      "consistency": {
        "terminology_check": true,
        "cross_reference_check": true,
        "requirement_numbering": true,
        "format_compliance": true
      },
      "traceability": {
        "source_traceability": true,
        "requirement_dependencies": true,
        "test_traceability": true,
        "design_traceability": true
      },
      "testability": {
        "verification_method_required": true,
        "measurable_criteria": true,
        "test_case_derivable": true,
        "acceptance_criteria_clear": true
      }
    },
    "semiconductor_specific": {
      "power_management": {
